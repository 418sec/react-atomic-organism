import React, {Component} from 'react';
import jsdom from 'jsdom-global';
let reset = jsdom(null, {runScripts: 'dangerously', resources: 'usable'})

import {expect} from 'chai';
import {shallow, mount, configure} from 'enzyme';
import Adapter from 'enzyme-adapter-react-16';
configure({adapter: new Adapter()});

import {openCodeEditor} from '../CodeEditor';
import {PopupPool, popupDispatch} from 'organism-react-popup';

describe('Test CodeEditor', () => {
  after(() => {
    jsdom();
  });

  afterEach(done => {
    reset();
    reset = jsdom(null, {runScripts: 'dangerously', resources: 'usable'})
    popupDispatch('dom/cleanAll');
    setTimeout(() => done(), 300);
  });

  it('simple test', done => {
    const dom = <PopupPool />;
    const uDom = mount(dom);
    openCodeEditor();
    setTimeout(() => {
      uDom.update();
      const html = uDom.html();
      expect(html).to.have.string('full-screen');
      done();
    }, 10);
  });

  it('test set html', done => {
    const dom = <PopupPool />;
    const wrapper = mount(dom);
    openCodeEditor('<div>', html => {
      console.log(html);
      expect(html).to.have.string('html');
      done();
    });
    setTimeout(() => {
      const dIfraem = wrapper.find('iframe');
      console.log({dIfraem});
      popupDispatch('dom/closeAll');
    }, 100);
  });
});
